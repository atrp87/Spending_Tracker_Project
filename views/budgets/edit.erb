<section id="budget-edit">
  <div class="container-lg">
    <div class="text-center">
      <p class="lead">
        <i class="bi bi-cash-coin"></i>
      </p>
      <h2><stong>£<%= @budget.amount %></strong></h2>
    </div>
    <div class="row justify-content-center my-5">
      <div class="col-lg-6">
        <form action='/budgets/<%= @budget.id %>' method='POST'>
          <div class="input-group mb-4">
            <span class="input-group-text">
              <i class="bi bi-currency-pound"></i>
            </span>
            <input type="number" step='0.01' name='amount' id="amount" aria-describedby='amount' class="form-control" placeholder='£0.00' required />
            <span class="input-group-text">
              <span class="tt" data-bs-placement="bottom" title="Enter a new budget and your allowance will be updated.">
                <i class="bi bi-question-circle text-muted"></i>
              </span>
            </span>
          </div>
          <div class="mb-4 text-center">
            <button type="submit" class="btn btn-success">Save</button>
          </div>
          <div class="mb-4 text-center">
            <a href="/budgets" class="btn btn-secondary">Back</a>
          </div>
        </form>
      </div>
    </div>
  </div>
    <script>
      const tooltips = document.querySelectorAll('.tt')
      tooltips.forEach(t => {
        new bootstrap.Tooltip(t)
      })
    </script>
</section>