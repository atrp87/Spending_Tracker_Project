<section class='container h-100'>
  <div class='row h-100 justify-content-center align-items-center'>
    <form action='/tags/<%= @tag.id %>' method='POST' class='col-12'>
      <div class='form-group'>
        <div class='text-center'>
          <p class='lead'>
            <i class='bi bi-journal-arrow-up'></i>
          </p>
          <h2>
            <stong>
              <%= @tag.name %>
            </strong>
          </h2>
        </div>
        <div class='row justify-content-center mt-1'>
          <div class='col-6'>
            <div class='input-group mb-4'>
              <label for='tag-input'>Edit Category:</label>
              <div class='input-group '>
                <span class='input-group-text'>
                  <i class='bi bi-pen'></i>
                </span>
                <input type='text' 
                  name='name' 
                  id='tag-input' 
                  placeholder='...' 
                  class='form-control' 
                  required 
                />
                <span class='input-group-text'>
                  <span class='tt' data-bs-placement='bottom' title='Enter a new category and your table will be updated.'>
                    <i class='bi bi-question-circle text-muted'></i>
                  </span>
                </span>
              </div>
            </div>
            <div class=' d-flex justify-content-center justify-content-around'>
              <button type='submit' class='btn btn-outline-success'>Save</button>
                <a href='/tags' class='btn btn-outline-secondary'>Back</a>
              </div>
      </form>
    </div>
  </div>
</section>

<script>
  const tooltips = document.querySelectorAll('.tt')
  tooltips.forEach(t => {
    new bootstrap.Tooltip(t)
  })
</script>