<section class='container h-100'>
  <div class='row h-100 justify-content-center align-items-center'>
    <form class='col-12' action='/transactions/<%= @transaction.id %>' method='POST'>
      <div class='text-center'>
        <h2><i class='bi bi-journal-arrow-up'></i></h2>
      </div>
      <div class='row justify-content-center'>
      <div class='col-lg-6'>
        <div class='form-group'>
        <label for='tag-select' class='form-label'>Catagory:</label>
          <div class='mb-4 input-group'>
            <span class='input-group-text'>
              <i class='bi bi-pen'></i>
            </span>
            <select class='form-select' id='tag-select' name='tag_id'>
              <option selected><%= @transaction.tag.name %></option>
              <% for tag in @tags %>
              <option value= <%= tag.id %>><%= tag.name %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class='form-group'>
        <label for='merchant-select' class='form-label'>Merchant:</label>
          <div class='mb-4 input-group'>
            <span class='input-group-text'>
              <i class='bi bi-pen'></i>
            </span>
            <select class='form-select' name='merchant_id' id='merchant-select'>
              <option selected><%= @transaction.merchant.name %></option>
              <% for merchant in @merchants %>
              <option value= <%= merchant.id %>><%= merchant.name %></option>
              <% end %>
            </select>
          </div>
          <div class='form-group'>
            <label for='amount' class='form-label'>Amount:</label>
              <div class='input-group mb-4'>
                <span class='input-group-text'>
                  <i class='bi bi-currency-pound'></i>
                </span>
                <input
                  class='form-control'
                  id='amount'
                  type='number' 
                  step='0.01' 
                  name='amount' 
                  placeholder='Â£0.00' 
                  value='<%= @transaction.amount %>'
                  required 
                />
              </div>
              <div class=' d-flex justify-content-center justify-content-around'>
                <button type='submit' class='btn btn-outline-success'>Save</button>
                  <a href='/transactions' class='btn btn-outline-secondary'>Back</a>
              </div>
            </div>
      </form>   
  </div>  
</section>