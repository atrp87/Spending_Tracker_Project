<section id='contact'>
    <div class='container-lg'>
      
      <div class='text-center'>
        <h2><i class='bi bi-journal-arrow-up'></i></h2>
        <p class='lead'>Questions to ask? Fill out the form to contact me directly...</p>
      </div>
      <div class='row justify-content-center my-5'>
        <div class='col-lg-6'>
          
          <form action='/transactions/<%= @transaction.id %>' method='POST'>
            <label for='tag-select' class='form-label'>Catagory:</label>
              <div class='mb-4 input-group'>
              <span class='input-group-text'>
                <i class='bi bi-pen'></i>
              </span>
              <select class='form-select' id='tag-select'>
        <% for tag in @tags %>
            <option value='<%= tag.id %>'><%= tag.name %></option>
        <% end %>
              </select>
            </div>
            <label for='merchant-select' class='form-label'>Merchant:</label>
              <div class='mb-4 input-group'>
              <span class='input-group-text'>
                <i class='bi bi-pen'></i>
              </span>
              <select class='form-select' id='merchant-select'>
        <% for merchant in @merchants %>
            <option value='<%= merchant.id %>'><%= merchant.name %></option>
    
        
             <% end %>
        </select>
            </div>
            <label for='amount' class='form-label'>Amount:</label>
            <div class='input-group mb-4'>
              <span class='input-group-text'>
                <i class='bi bi-currency-pound'></i>
              </span>
                                <input
                    class='form-control'
                    aria-label='Amount (to the nearest pound)'
                    id='amount'
                    type='number' 
                    step='0.01' 
                    name='amount' 
                    placeholder='Â£0.00' 
                    value='<%= @transaction.amount %>'
                    required 
                  />
                 
              </div>


            <label for='subject' class='form-label'></label>
            <div class='mb-4 text-center'>
                                  <button
                  type='submit' 
                  class='btn btn-success mb-3'>
                  Save
                </button>
              <button type='submit' class='btn btn-secondary'>Back</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

